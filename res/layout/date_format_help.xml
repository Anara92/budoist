	        </TableRow>
	        <TableRow android:layout_marginBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        	<TextView android:layout_marginLeft="3dp" android:layout_column="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every mon,fri" android:textColor="#000000" android:textStyle="bold" />
