	        </TableRow>
	        <TableRow android:layout_marginBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        	<TextView android:layout_marginLeft="3dp" android:layout_column="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+5" android:textColor="#000000" android:textStyle="bold" />
	        	<TextView android:id="@+id/date_format_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 days from now: 15 Oct 2011" android:textColor="#000000" />
	        </TableRow>
	        <TableRow android:layout_marginBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        	<TextView android:layout_marginLeft="3dp" android:layout_column="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every day" android:textColor="#000000" android:textStyle="bold" />
