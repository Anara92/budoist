	        </TableRow>
	        <TableRow android:layout_marginBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        	<TextView android:layout_marginLeft="3dp" android:layout_column="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every 7 may" android:textColor="#000000" android:textStyle="bold" />
	        	<TextView android:id="@+id/date_format_12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every may 7th" android:textColor="#000000" />
	        </TableRow>
	        <TableRow android:layout_marginBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        	<TextView android:layout_marginLeft="3dp" android:layout_column="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ev 3 days" android:textColor="#000000" android:textStyle="bold" />
	        	<TextView android:id="@+id/date_format_12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every 3 days" android:textColor="#000000" />
	        </TableRow>
	        <TableRow android:layout_marginBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        	<TextView android:layout_marginLeft="3dp" android:layout_column="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every 13/5" android:textColor="#000000" android:textStyle="bold" />
	        	<TextView android:id="@+id/date_format_12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every may 13th" android:textColor="#000000" />
	        </TableRow>
	        <TableRow android:layout_marginBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        	<TextView android:layout_marginLeft="3dp" android:layout_column="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every weekday" android:textColor="#000000" android:textStyle="bold" />
	        	<TextView android:id="@+id/date_format_12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every weekday (mon to fri)" android:textColor="#000000" />
	        </TableRow>
	        <TableRow android:layout_marginBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        	<TextView android:layout_marginLeft="3dp" android:layout_column="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every last day" android:textColor="#000000" android:textStyle="bold" />
	        	<TextView android:id="@+id/date_format_12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="every last day of the month" android:textColor="#000000" />
	        </TableRow>
	    </TableLayout>
    </ScrollView>
