<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/sync_dialog_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <TextView android:id="@+id/sync_message" android:textSize="16dp" android:textColor="#FFFFFF" android:text="Syncing" android:paddingTop="5dp" android:paddingLeft="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    
    <ProgressBar android:id="@+id/syncing_progress" android:paddingRight="6dp" android:paddingTop="6dp" android:paddingLeft="6dp" style="?android:attr/progressBarStyleHorizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    
    <TextView android:id="@+id/sync_percentage" android:text="0%" android:paddingTop="3dp" android:paddingLeft="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    
   <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:layout_marginTop="10dp">
        <Button android:text="Hide" android:id="@+id/sync_hide" android:layout_width="130dp" android:layout_height="wrap_content"></Button>
    </LinearLayout>
</LinearLayout>
